@import 'mq'
@import 'functions'
@import 'base'
@import 'keyframes'

$colors = {
    white: #ffffff,
    black: #000000,
    green: #9ccd2d
}

html
    height: 100%

body
    background-color: $colors.black
    color: $colors.white
    font: 18px/1.6em 'Montserrat', sans-serif
    justify-content: center
    align-items: center
    overflow: hidden

strong
    font-weight: 700

#game
    canvas
        transform-origin: 50% 0

.noise
    width: 100%
    height: 100%
    background-image: url('../assets/noise.gif')
    mix-blend-mode: overlay
    position: fixed
    top: 0
    left: 0
    z-index: 10
    opacity: 0.5

.overlay
    width: 100%
    height: 100%
    background-color: rgba($colors.black, 0.7)
    position: fixed
    top: 0
    left: 0
    z-index: 20
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    overflow-x: hidden
    overflow-y: auto
    -webkit-overflow-scrolling: touch
    animation: overlayShow 0.2s
    transform: translateZ(0)

    &--start
        background-color: #23221e
        // background-image: url('../assets/start.jpg')
        // background-size: 200% auto
        // background-position: 50% 0
        // background-repeat: no-repeat
        // background-attachment: local
        display: block

        // @media $mq.not_mobile
        //     background-size: 100% auto

        // &:before
        //     content: ''
        //     width: 100%
        //     height: 100%
        //     position: absolute
        //     top: 0
        //     left: 0
        //     background-image: url('../assets/start.jpg')
        //     background-size: 200% auto
        //     background-position: 50% 0
        //     background-repeat: no-repeat
        //     background-attachment: local
        //     z-index: -1

        .overlayContent
            max-width: none
            position: relative

            &:before
                content: ''
                width: 100%
                height: 100%
                position: absolute
                top: 0
                left: 0
                background-image: url('../assets/start.jpg')
                background-size: 200% auto
                background-position: 50% 0
                background-repeat: no-repeat
                background-attachment: local
                z-index: -1

                @media $mq.not_mobile
                    background-size: 100% auto

.overlayContent
    width: 100%
    max-width: 960px
    display: flex
    flex-direction: column

.start
    flex: 1
    display: flex
    flex-direction: column
    padding: 30px 15px
    text-align: center

    @media $mq.not_mobile
        padding: 80px 50px 50px

    &__about
        max-width: 860px
        font-size: 16px
        line-height: 1.6em
        margin-top: 80%
        margin-bottom: 30px
        margin-left: auto
        margin-right: auto

        @media $mq.not_mobile
            font-size: 22px
            line-height: 1.6em
            margin-top: 37%
            margin-bottom: 30px

    &__button
        width: 240px
        height: 62px
        font-size: 22px
        font-weight: 700
        background-image: url('../assets/ui/start_button.png')
        background-repeat: no-repeat
        background-position: 50% 0
        background-color: transparent
        margin: 0 auto
        flex-shrink: 0

        &:hover,
        &:focus
            background-position: 50% 100%

.pause
    max-width: 421px
    margin: 0 auto

    &__title
        font-size: 52px
        line-height: 1em
        font-weight: 700
        text-align: center
        margin-bottom: 20px

    &__button
        width: 100%
        height: 62px
        margin-bottom: 15px
        font-size: 22px
        font-weight: 700
        background-image: url('../assets/ui/pause_button.png')
        background-repeat: no-repeat
        background-position: 50% 0
        background-color: transparent

        svg
            display: inline
            vertical-align: middle
            position: relative
            top: -2px
            margin-right: 13px

        &:hover,
        &:focus
            background-position: 50% 100%