@import 'mq'
@import 'functions'
@import 'base'

$colors = {
    white: #ffffff,
    black: #000000,
    green: #9ccd2d
}

html
    height: 100%

body
    background-color: $colors.black
    color: $colors.white
    font: 18px/1.6em 'Montserrat', sans-serif
    justify-content: center
    align-items: center
    overflow: hidden

.noise
    width: 100%
    height: 100%
    background-image: url('../assets/noise.gif')
    mix-blend-mode: overlay
    position: fixed
    top: 0
    left: 0
    z-index: 10
    opacity: 0.5

.overlay
    width: 100%
    height: 100%
    background-color: rgba($colors.black, 0.7)
    position: fixed
    top: 0
    left: 0
    z-index: 20
    display: flex
    align-items: center
    justify-content: center

.overlayContent
    width: 100%
    max-width: 960px

.pause
    max-width: 421px
    margin: 0 auto

    &__title
        font-size: 52px
        line-height: 1em
        font-weight: 700
        text-align: center
        margin-bottom: 20px

    &__button
        width: 100%
        height: 62px
        margin-bottom: 15px
        font-size: 22px
        font-weight: 700
        background-image: url('../assets/ui/pause_button.png')
        background-repeat: no-repeat
        background-position: 50% 0
        background-color: transparent

        svg
            display: inline
            vertical-align: middle
            position: relative
            top: -2px
            margin-right: 13px

        &:hover,
        &:focus
            background-position: 50% 100%